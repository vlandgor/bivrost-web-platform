<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Bivrost</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/basics/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/side-menu.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/session-page.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/project-page.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/tableList.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/generalElements.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/modalPanel.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/content.css" asp-append-version="true"/>
    
    <link rel="stylesheet" href="~/css/basics/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/basics/table__elements.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/basics/standard__elements.css" asp-append-version="true"/>
    
    <link rel="stylesheet" href="~/css/components/side-menu__component.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/components/header__component.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/components/project-menu__component.css" asp-append-version="true"/>
    
    <link rel="stylesheet" href="~/css/containers/table__container.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/containers/operator__container.css" asp-append-version="true"/>
    
    <link rel="stylesheet" href="~/css/pages/home__page.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/pages/project__page.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/pages/session__page.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/pages/student__page.css" asp-append-version="true"/>
    
    <link rel="stylesheet" href="~/BivrostWeb.styles.css" asp-append-version="true"/>
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
</head>
<header>
        @await Component.InvokeAsync("Header")
    </header>
    <body>
    <main>
        <div class="side-menu-container">
            @await Component.InvokeAsync("SideMenu")
        </div>
        <div class="content-container">
            @RenderBody()
        </div>
    </main>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>