@model AccountLoginViewModel

@{
    ViewData["Title"] = "LogIn";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

<div class="login-page">
    <div class="modal-content modalPanel">
        <div class="modalHeader">
            <label class="modalTitle">Log In</label>
            <label class="modalTitleDescription" id="modalTitleDescription">Welcome back! Please enter your details.</label>
        </div>
        <form method="post" asp-action="LogIn">
            <div class="modalBody">
                <div class="modalBodyContentBlock">
                    <label asp-for="Email"></label>
                    <input type="text" asp-for="Email" placeholder="Enter email" class="form-control" autocomplete="off"/>
                    <span class="text-danger">@TempData["errorUsername"]</span>
                </div>
                <div class="modalBodyContentBlock">
                    <label asp-for="Password"></label>
                    <input type="text" asp-for="Password" placeholder="Enter password" class="form-control" autocomplete="off"/>
                    <span class="text-danger">@TempData["errorPassword"]</span>
                </div>
            </div>
            <div class="modalFooter">
                <a asp-action="SignUp">
                    <div type="button" class="footerButton cancelButton">Sign Up</div>
                </a>
                <div class="form-group">
                    <input type="submit" value="Log In" class="footerButton continueButton"/>
                </div>
            </div>
        </form>
    </div>
</div>
